def binary_search(arr, x):
    left, right = 0, len(arr) - 1
    
    while left <= right:
        mid = (left + right) // 2
        mid_val = arr[mid]
        
        if mid_val == x:
            return mid
        elif mid_val < x:
            left = mid + 1
        else:
            right = mid - 1
            
    return -1
